{
  "name": "budget-request-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm dev:backend\" \"pnpm dev:frontend\" --names \"BACKEND,FRONTEND\" --prefix-colors \"cyan,magenta\"",
    "dev:frontend": "cd frontend && pnpm dev",
    "dev:backend": "cd backend && pnpm dev",
    "build": "cd frontend && pnpm build",
    "build:frontend": "cd frontend && pnpm build",
    "build:backend": "cd backend && pnpm build",
    "start": "cd frontend && pnpm start",
    "start:frontend": "cd frontend && pnpm start",
    "start:backend": "cd backend && pnpm start",
    "install:all": "pnpm install && cd frontend && pnpm install && cd ../backend && pnpm install",
    "prisma:generate": "cd backend && pnpm prisma:generate",
    "setup": "pnpm install:all && pnpm prisma:generate && cd backend && pnpm prisma:migrate",
    "postinstall": "pnpm prisma:generate"
  },
  "dependencies": {
    "next": "^15.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d",
  "workspaces": [
    "frontend",
    "backend"
  ]
}
